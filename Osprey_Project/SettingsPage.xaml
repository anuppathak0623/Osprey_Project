<Page x:Class="Osprey_Project.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings">

    <Grid Background="Black">
        <Viewbox Stretch="Uniform">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450" Background="#333333">
                <!-- Header-->
                <TextBlock Text="Update Profile" FontSize="20" FontWeight="Bold" Foreground="Gold" Margin="0,0,0,10" Width="178"/>
                <!-- Username-->
                <TextBlock Text="Username:" FontWeight="SemiBold" Width="416" Foreground="WhiteSmoke" />
                <TextBox x:Name="UsernameBox" Width="250" Height="30" Margin="0,5,0,10"/>
                <!-- Password-->
                <TextBlock Text="Password:" FontWeight="SemiBold" Width="411" Foreground="WhiteSmoke" />
                <PasswordBox x:Name="PasswordBox" Width="250" Height="30" Margin="0,5,0,15"/>
                <!-- Name-->
                <TextBlock Text="Name:" FontWeight="SemiBold" Width="411" Foreground="WhiteSmoke"/>
                <TextBox x:Name="NameBox" Width="250" Height="30" Margin="0,5,0,20"/>
                <!-- Age-->
                <TextBlock Text="DOB (YY-MM-DD):" FontWeight="SemiBold" Width="411" Foreground="WhiteSmoke"/>
                <TextBox x:Name="DOB" Width="250" Height="30" Margin="0,5,0,25"/>
                <!--Address-->
                <TextBlock Text="Address:" FontWeight="SemiBold" Width="411" Foreground="WhiteSmoke"/>
                <TextBox x:Name="AddressBox" Width="250" Height="30" Margin="0,5,0,25"/>
                <!-- Save button-->
                <Button Content="Save Changes" Width="150" Height="35" 
                    Background="Blue" Foreground="White" FontWeight="Bold" 
                    Cursor="Hand" Click="SaveChanges_Click"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>


