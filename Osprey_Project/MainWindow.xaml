<Window x:Class="Osprey_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Background="WhiteSmoke"
        ResizeMode="CanResize" SizeToContent="Manual" WindowStartupLocation="CenterScreen">

    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">

            <!-- Background Gradient -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3C72" Offset="0.0"/>
                    <GradientStop Color="#2A5298" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>


            <!-- Labels -->
            <Label Content="Username" HorizontalAlignment="Left" Margin="228,246,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="WhiteSmoke"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="228,291,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="WhiteSmoke"/>

            <!-- Username TextBox -->
            <TextBox x:Name="txtUsername" Width="224" Margin="328,247,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                     Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,5" FontSize="14"/>

            <!-- PasswordBox -->
            <PasswordBox x:Name="txtPassword" Width="224" Margin="328,294,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
             Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,5" FontSize="14"/>

            <!-- Buttons -->
            <Button Content="Login" Width="131" Margin="228,338,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Background="Blue" Foreground="White" FontSize="14" FontWeight="Bold" BorderBrush="#2980B9" Height="41"
                    Cursor="Hand" Click="LoginButton_Click"/>

            <Button Content="Create Profile" Width="146" Margin="406,338,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Background="purple" Foreground="White" FontSize="14" FontWeight="Bold" BorderBrush="#8E44AD" Height="41"
                    Cursor="Hand" Click="OpenProfileCreationWindow"/>

            <!-- Title & Logo -->
            <Image HorizontalAlignment="Center" Height="200" VerticalAlignment="Top"
                   Source="/download-removebg-preview.png"/>
            <Image HorizontalAlignment="Left" Height="68" Margin="278,172,0,0" VerticalAlignment="Top" Width="252" Source="/logo-removebg-preview.png" RenderTransformOrigin="0.817,0.577" Stretch="Fill" StretchDirection="DownOnly"/>



        </Grid>
    </Viewbox>
</Window>
